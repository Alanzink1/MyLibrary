<!DOCTYPE html>
<html lang="pt-br">
    <%- include('./partials/head.ejs') %>
    <%- include('./partials/style.ejs') %>
<body>
    <!-- Titulo -->
    <h1 class="title-page">Seus livros:</h1>
    <div class="contain">
        <!-- Seus livros aqui -->
        <div class="book">
            <% if(books.length > 0) { %> <% books.forEach(book => { %>
            
            <a class="link-book" href=<%= book.bookURL %> target="_blank"><h3 class="title"><%= book.bookName %> </h3></a>
            <!-- <p>Legaal</p> -->
            <% }) %> <% } else { %>
            <p>NÃ£o tem Livros no momento...</p>
            <% } %>
        </div>
    </div>
    <div class="input-container">
        <div class="book-name">
            <h3 class="label">Escreva o nome do seu livro:</h3>
            <input class="input-book" type="text" name="Books" id="book-input">
        </div>
        <div class="book-url">
            <h3 class="label">Escreva o link pdf do seu livro:</h3>
            <input class="input-book" type="text" name="Url Books" id="url-book-input">
        </div>
        <button class="btn-submit" type="submit" onclick='bookSubmit()'>Enviar</button>
    </div>

    <%- include('./partials/script.ejs') %>
</body>
</html>